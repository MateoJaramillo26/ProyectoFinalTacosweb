@model IEnumerable<ProyectoFinalTacos.Models.Producto>
@{
    ViewData["Title"] = "Productos";
    string sortOrder = ViewData["CurrentSort"] as string;
    string searchString = ViewData["CurrentFilter"] as string;
}

<h1>Productos</h1>

<form asp-action="Index" method="get">
    <p>
        Search by name: <input type="text" name="searchString" value="@searchString" />
        <input type="submit" value="Search" />
        <a asp-action="Index">Reset</a>
    </p>
    <p>
        Sort by:
        <a asp-action="Index" asp-route-sortOrder="name_desc">Name (descending)</a> |
        <a asp-action="Index" asp-route-sortOrder="price">Price (ascending)</a> |
        <a asp-action="Index" asp-route-sortOrder="price_desc">Price (descending)</a>
    </p>
</form>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Nombre</th>
            <th>Descripción</th>
            <th>Imagen</th>
            <th>Precio</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.IDProducto</td>
                <td>@item.NombreProducto</td>
                <td>@item.DescripcionProducto</td>
                <td><img src="@item.ImagenProducto" alt="Imagen de @item.NombreProducto" width="100" /></td>
                <td>@item.PrecioProducto.ToString("$")</td>
            </tr>
        }
    </tbody>
</table>
